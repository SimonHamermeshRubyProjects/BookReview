<div class = "row">
    
    <div class = "col-md-4">
    <%= image_tag @book.book_img.url(:book_show), class: "book-show"%>
    </div>
    
    <div class = "col-md-8">
        <div class ="book-info">
            <h2 class = "book-title"><%= @book.title%></h2>
            <h3 class = "book-author"> <span>Written by:</span> <%= @book.author%></h3>
            <h4 class = "avg-rating">Average Rating:   <%=@average_review%></h4>
            <span class = "number-of-reviews">Based on <%= @book.reviews.count %> reviews. </span>
            <h4 class = "book-description"><%= @book.description%></h4>
        </div>
    </div>
    
</div>
<br/>

    <div class="links btn-group">
        <%= link_to "Back", root_path(@book), class:"btn btn-success"%>
    
        <%if user_signed_in?%>
        <% if @book.user_id == current_user.id%>
        <%= link_to "Edit", edit_book_path(@book), class: "btn btn-primary"%>
        <%= link_to "Delete", book_path(@book), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
        <%end%>
        <%end%>
    </div> <br/>


<div class = "row">
        <!--- Where user ratings will go--->
        <div class="col-md-3">
        <div class = "reviews">
  
        <h2 class = "text-center">Reviews</h2>
        <%= render @book.reviews %>
            <div>
                <%= link_to "Add Review", new_book_review_path(@book), class: "btn btn-success"%>
            </div>
        </div>
        </div>
    
</div>
