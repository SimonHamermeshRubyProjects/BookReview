
<div class="col-md-6 col-md-offset-3">
    <div class = "edit-book-form">
        <h1>Edit book</h1>
        
        <%= simple_form_for @book, :html => {:multipart=>true} do |f| %>
            <%= f.select :category_id, @category%>
            <%= f.file_field :book_img %>
            <%= f.input :title %>
            <%= f.input :description %>
            <%= f.input :author %>
            <%= f.button :submit, class: "btn btn-success" %>
        
        <%end%>
    </div>
</div>
