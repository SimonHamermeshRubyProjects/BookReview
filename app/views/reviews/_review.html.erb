<div class = "review">
    <p>RATING:  <%= review.rating%> STARS</p>
    <p class = "review-comment"><%= review.comment%></p>
    
    
    <% if user_signed_in?%>
    <% if review.user_id == current_user.id%>
        <div class= "links btn-group">
            <%= link_to "Edit", edit_book_review_path(review.book, review), class: "btn btn-success" %>
            <%= link_to "Delete", book_review_path(review.book, review), method: :delete, data:{confirm: "Are you sure?"}, class: "btn btn-success"%>
        </div>
    <%end%>
    <%end%>
</div>